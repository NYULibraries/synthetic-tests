{
  "src_folders" : ["e2e"],

  "webdriver" : {
    "start_process": true,
    "server_path": "node_modules/.bin/chromedriver",
    "port": 9515
  },

  "test_settings" : {
    "default" : {
      "desiredCapabilities": {
        "browserName": "chrome"
      },
      "output_folder" : false,
      "chrome" : {
        "desiredCapabilities": {
          "javascriptEnabled": true,
          "acceptSslCerts": true,
          "browserName": "chrome",
          "chromeOptions" : {
            "args" : ["headless", "no-sandbox", "disable-gpu"]
          }
        }
      }
    }
  }
}

